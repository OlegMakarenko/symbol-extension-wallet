{
    "manifest_version": 3,
    "name": "Symbol Wallet",
    "description": "Symbol Wallet Extension",
    "version": "0.1.0",
    "permissions": [
        "storage"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_start",
            "all_frames": true
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "inpage.js"
            ],
            "matches": [
                "http://*/*",
                "https://*/*"
            ]
        }
    ],
    "icons": {
        "16": "./icon-16.png",
        "19": "./icon-19.png",
        "32": "./icon-32.png",
        "38": "./icon-38.png",
        "48": "./icon-48.png",
        "64": "./icon-64.png",
        "128": "./icon-128.png"
    },
    "action": {
        "default_popup": "index.html",
        "default_icon": {
            "16": "./icon-16.png",
            "19": "./icon-19.png",
            "32": "./icon-32.png",
            "38": "./icon-38.png",
            "48": "./icon-48.png",
            "64": "./icon-64.png",
            "128": "./icon-128.png"
        }
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'none'"
    }
}
